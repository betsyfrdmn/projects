```{r, warning=FALSE}
# Chose our swing states
swing_states <- c("AZ", "NV", "GA", "MI", "NC", "PA", "WI", "NH", "MN")

# Joined datasets
policy_win_general <- policy_text |>
  select(c(doc_id, win_general, state_postal))
merged <- policy_spacy_parsed |>
  left_join(policy_win_general, by = "doc_id") |>
  filter(win_general %in% c(0,1)) |>
  filter(state_postal %in% swing_states)

anno_edit <- merged |>
  dplyr::select(win_general, doc_id, sentence_id, token_id, token, lemma,
                head_token_id, dep_rel, win_general, pos, tag)
anno_edit <- anno_edit %>%
  mutate(
    # fix contractions
    token = case_when(
      token == "'d" ~ "would",
      token == "'ll" ~ "will",
      token == "ll" ~ "will",
      token == "wo" ~ "will",
      token == "ca" ~ "can",
      TRUE ~ token
    ))
    
anno_edit <- structure(anno_edit, class = c("spacyr_parsed", "data.frame"))
sub_tkns <- as.tokens(anno_edit, include_pos = "tag", concatenator = "_")


doc_categories <- merged %>%
  dplyr::select(doc_id, win_general) %>%
  distinct()  # keep one row per document

# Make sure the order matches names(sub_tkns)
doc_categories <- doc_categories %>%
  arrange(match(doc_id, names(sub_tkns)))

# Attach as docvars
docvars(sub_tkns) <- doc_categories["win_general"]

# Now you can make dfms
sub_dfm <- dfm(sub_tkns)

# Create two subsets
win_dfm <- dfm_subset(sub_dfm, win_general == 1) |> dfm_trim(min_termfreq = 1)
lose_dfm <- dfm_subset(sub_dfm, win_general == 0) |> dfm_trim(min_termfreq = 1)

# Keyness Table
win_lose_keyness <- keyness_table(win_dfm, lose_dfm) |>
  separate(col = Token, into = c("Token", "Tag"), sep = "_")

win_lose_keyness |>
  filter(Tag == "md", AF_Tar > 1 | AF_Ref > 1) |>
  arrange(desc(LL)) |>
  gt() |>
  fmt_number(columns = c('LL', 'LR', 'Per_10.6_Tar', 'Per_10.6_Ref'), decimals = 2) |>
  fmt_number(columns = c('DP_Tar', 'DP_Ref'), decimals = 3) |>
  fmt_number(columns = c('PV'), decimals = 5)


```

